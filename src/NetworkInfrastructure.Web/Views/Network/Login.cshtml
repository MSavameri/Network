@model NetworkInfrastructure.Web.Models.UserDto

@{
    ViewData["Title"] = "Login";
}

<div class="row g-2">
    <div class="col-12 mb-3">
        <div class="container-fluid">
            <div class="row d-flex justify-content-center align-items-center">
                <div asp-validation-summary="ModelOnly"></div>

                <div class="col-md-9 col-lg-6 col-xl-5">
                    <img src="~/images/draw2.jpg" class="img-fluid" alt="Sample image">
                </div>

                <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                    <form method="post" asp-action="Login" asp-controller="Network">
                        @Html.AntiForgeryToken()
                        <div class="form-floating mb-4">
                            <input type="text" asp-for="UserName" id="UserName" name="UserName" class="form-control form-control-lg" placeholder="User Name" />
                            <label class="form-label" for="UserName">User Name</label>
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input type="password" id="Password" name="Password" asp-for="Password" class="form-control form-control-lg rounded-right" placeholder="Password">
                            <label class="form-label" for="Password">Password</label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <button id="toggle-password" type="button" class="d-none" aria-label="Show password as plain text. Warning: this will display your password on the screen.">
                            </button>
                        </div>

                        <button type="submit" class="w-100 btn btn-lg btn-outline-primary">Login</button>
                    </form>

                    <label class="text-danger">@ViewData["ErrMesage"]</label>
                </div>
            </div>
        </div>
    </div>
</div>